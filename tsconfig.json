{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@eshop/backend/*": [
        "libs/*"
      ],
      "@eshop/backend": ["libs/backend/src/index.ts"],
      "@eshop/data-models": ["libs/data-models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
